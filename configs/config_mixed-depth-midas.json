{
    "expname": "abril/mixed-depth-midas",
    "crop_center": true,
    "dataset": [
        "synthia",
        "synscapes",
        "midair",
        "virtualkitti"
    ],
    "augmentation": true,
    "encoder_name": "base",
    "num_workers": 4,
    "target_size": [
        256,
        256
    ],
    "depth_clip": null,
    "mask_sky": false,
    "dataset_root": [
        "/hadatasets/SYNTHIA-AL/",
        "/hadatasets/synscapes",
        "/hadatasets/midair/MidAir",
        "/hadatasets/virtual_kitty"
    ],
    "batch_size": 40,
    "epochs": 100,
    "split_json": [
        "configs/synthia_splits.json",
        "configs/synscapes_split.json",
        "configs/midair_splits.json",
        "configs/virtual_kitty_splits.json"
    ],
    "features": [
        [
            "image_l"
        ],
        [
            "depth_l"
        ]
    ],
    "tasks": [
        {
            "type": "dense_regression",
            "name": "depth",
            "train_on_disparity": false,
            "loss": "midas",
            "metrics": [
                "rmse",
                "logrmse",
                "absrel",
                "squaredrel",
                "a1",
                "a2",
                "a3"
            ],
            "channels": 1,
            "features": [
                "depth_l"
            ],
            "mask_feature": null,
            "decoder": {
                "type": "unet",
                "args": {}
            }
        }
    ]
}